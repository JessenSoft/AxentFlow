@page "/workflows"

<PageTitle>Workflows</PageTitle>

<MudPaper Class="p-4">
    <MudGrid Class="mb-4">
        <MudItem xs="6">
            <MudText Typo="Typo.h5">Workflows</MudText>
        </MudItem>
        <MudItem xs="6" Class="d-flex justify-end">
            <MudButton Variant="Variant.Filled" 
                       Color="Color.Primary"
                       Href="/workflows/create">
                <MudIcon Icon="@Icons.Material.Filled.Add" />
                Neu
            </MudButton>
        </MudItem>
    </MudGrid>

    <MudTextField Label="Suche"
                  @bind-Value="@Vm.SearchText"
                  Immediate="true"
                  Adornment="Adornment.Start"
                  AdornmentIcon="@Icons.Material.Filled.Search" />


    <MudTable Items="Vm.FilteredWorkflows"
              Hover="true"
              Dense="true"
              Class="mt-4">

        <HeaderContent>
            <MudTh>Name</MudTh>
            <MudTh>Beschreibung</MudTh>
            <MudTh>Status</MudTh>
            <MudTh>Schritte</MudTh>
        </HeaderContent>

        <RowTemplate>
            <MudTd DataLabel="Name">@context.Name</MudTd>
            <MudTd DataLabel="Beschreibung">@context.Description</MudTd>
            <MudTd DataLabel="Status">@context.Status</MudTd>
            <MudTd DataLabel="Schritte">@context.Steps.Count</MudTd>
        </RowTemplate>

    </MudTable>
</MudPaper>